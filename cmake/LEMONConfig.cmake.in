SET(LEMON_INCLUDE_DIR "@CMAKE_INSTALL_PREFIX@/include" CACHE PATH "LEMON include directory")
SET(LEMON_INCLUDE_DIRS "${LEMON_INCLUDE_DIR}")

IF(APPLE)
  IF(LEMON_BUILD_SHARED_LIBRARY)
    SET(LEMON_LIB_NAME "liblemon.dylib")
  ELSE()
    SET(LEMON_LIB_NAME "liblemon.a")
  ENDIF()
ELSEIF(WIN32)
  IF(LEMON_BUILD_SHARED_LIBRARY)
    SET(LEMON_LIB_NAME "liblemon.dll")
  ELSE()
    SET(LEMON_LIB_NAME "liblemon.lib")
  ENDIF()
ELSE()
  IF(LEMON_BUILD_SHARED_LIBRARY)
    SET(LEMON_LIB_NAME "liblemon.so")
  ELSE()
    SET(LEMON_LIB_NAME "liblemon.a")
  ENDIF()
ENDIF()

SET(LEMON_LIBRARY "@CMAKE_INSTALL_PREFIX@/lib/${LEMON_LIB_NAME}" CACHE FILEPATH "LEMON library")
SET(LEMON_LIBRARIES "${LEMON_LIBRARY}")
SET(LEMON_LINK_LIBRARIES "${LEMON_LIBRARY}")

MARK_AS_ADVANCED(LEMON_LIBRARY LEMON_INCLUDE_DIR)
